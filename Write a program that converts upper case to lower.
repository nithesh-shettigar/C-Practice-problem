/*Write a program that converts upper case to lower*/
#include <stdio.h>
#include <string.h>
 
int main()
{
    char s[1000];  
    int i;
 
    printf("Enter  the string : ");
    gets(s);
    
 
  /* The upper case alphabets ASCII value range is from 65 to 90 */ 
    for(i=0;s[i];i++)  
    {
    /*If the ASCII value of any character of the string is in the range between 65 to 90,

Add 32 to the ASCII value of the character to convert into lower case.*/
        if(s[i]>=65 && s[i]<=90)
         s[i]+=32;
 	}
 	
     
    printf("string in lowercase ='%s'\n",s);
 
 
    return 0;
